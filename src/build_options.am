
# Are we using our own fake MPI?

if HAVE_AM_MPI
else
  AM_CPPFLAGS += -I$(top_srcdir)/src/libtoast/fakempi
endif

# Enable debugging

if ENABLE_AM_DEBUG
else
  AM_CFLAGS += -DNDEBUG
  AM_CXXFLAGS += -DNDEBUG
endif

# OpenMP

if HAVE_AM_OPENMP
  AM_CXXFLAGS += $(OPENMP_CXXFLAGS)
  AM_LIBS += $(OPENMP_CXXFLAGS)
endif

# FFTW

AM_CPPFLAGS += $(FFTW_CPPFLAGS)
AM_LIBS += $(FFTW) $(PTHREAD_LIBS)

# Always need the C math library

AM_LIBS += $(MATH)
